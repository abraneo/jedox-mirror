<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema"
    targetNamespace="http://schemas.jedox.com/etlcore"
    xmlns:c="http://schemas.jedox.com/etlcore"
    elementFormDefault="qualified">

    <element name="function" type="c:transformertype" />

	<simpleType name="targettype">
 		 <restriction base="string">
    		<enumeration value="class"/>
    		<enumeration value="method"/>
  		</restriction>
	</simpleType> 
	
	<simpleType name="paramtype">
 		 <restriction base="string">
    		<enumeration value="double"/>
    		<enumeration value="int"/>
    		<enumeration value="byte"/>
    		<enumeration value="float"/>
    		<enumeration value="short"/>
    		<enumeration value="long"/>
    		<enumeration value="Double"/>
    		<enumeration value="Integer"/>
    		<enumeration value="Float"/>
    		<enumeration value="Short"/>
    		<enumeration value="Long"/>
    		<enumeration value="Byte"/>
    		<enumeration value="String"/>
    		<enumeration value="Object"/>
  		</restriction>
	</simpleType> 
	
	<complexType name="inputref">
		<attribute name="nameref" type="string">
			<annotation>
				<appinfo>
					<ref>source:/alias_map/alias/@name</ref>
				</appinfo>
			</annotation>
		</attribute>
		<attribute name="constant" type="string"/>
		<attribute name="type" type="c:paramtype" default="String"/>
		<attribute name="target" type="c:targettype" default="method"/>
	</complexType>

	<complexType name="inputstype">
        <sequence>
        	<element name="input" type="c:inputref" minOccurs="1" maxOccurs="unbounded"/>
        </sequence>
    </complexType>

	 <complexType name="parametertype">
        <all>
			<element name="class" type="string" minOccurs="1" maxOccurs="1"/>
        	<element name="method" type="string" minOccurs="1" maxOccurs="1"/>
        </all>
    </complexType>
    <complexType name="transformertype">
        <all>
        	 <element name="parameters" type="c:parametertype" minOccurs="1" maxOccurs="1"/>
        	<element name="inputs" type="c:inputstype" minOccurs="1" maxOccurs="1"/>
			<element name="comment" type="string" minOccurs="0" maxOccurs="1"/> 
        </all>
        <attribute name="name" type="string" use="required"/>
        <attribute name="type" type="string" use="required"/>
    </complexType>
</schema>
